<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#4bb134"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/sol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text="" />


        <Button
            android:id="@+id/logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerInParent="true"
            android:background="@drawable/logout"
            android:gravity="center" />



    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel"
        android:padding="20dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Name:" />

        <TextView
            android:id="@+id/cld_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:layout_below="@+id/name"
            android:gravity="center"
            android:text="Cluster Name:" />


        <TextView
            android:id="@+id/cmo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:layout_below="@+id/cld_name"
            android:text="CMO Name:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cld_name"
            android:orientation="vertical">




        <TextView
            android:id="@+id/namee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:singleLine="true"
            android:text="" />



        <TextView
            android:id="@+id/cluster_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_marginTop="7dp"
            android:text="" />



        <TextView
            android:id="@+id/cmo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="" />

        </LinearLayout>
        <Button
            android:id="@+id/visit_roc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:layout_below="@+id/cmo"
            android:textColor="#FFFFFF"
            android:background="#4bb134"
            android:text="New Visit Record CRG"/>

        <Button
            android:id="@+id/visit_hist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:layout_below="@+id/visit_roc"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:background="#4bb134"
            android:text="Visit Record History CRG"/>

        <Button
            android:id="@+id/change_pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:layout_below="@+id/visit_hist"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:background="#4bb134"
            android:text="Change Password"/>

        <Button
            android:id="@+id/attendance"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:layout_below="@+id/change_pass"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:background="#4bb134"
            android:text="Attendance"/>



    </RelativeLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:background="@drawable/ftr"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>