<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#9ce76a"
    android:alpha="0.9"
    android:padding="20dp">

    <TextView
        android:id="@+id/sol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sol_id"
        android:gravity="center"
        android:textSize="@dimen/comon_text_size"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/submit"
        android:layout_below="@+id/sol_id"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/subm"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="#4bb134"
        android:textSize="@dimen/comon_text_size"
        android:textColor="@color/white" />

    <TextView
        android:layout_below="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="@dimen/comon_text_size"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/sol_id"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:inputType="number"
        android:background="@drawable/edit_custem"
        android:layout_height="45dp"
        android:editable="false"
        android:selectAllOnFocus="false"
        android:layout_below="@+id/sol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>