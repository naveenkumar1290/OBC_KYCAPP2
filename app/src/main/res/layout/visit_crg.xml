                        <!--&lt;!&ndash; images will be added dynamicall to this layout &ndash;&gt;-->
                    <!--</LinearLayout>-->
                <!--</HorizontalScrollView>-->
            <!--</LinearLayout>-->
            <TextView
                android:id="@+id/lat_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/lat"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_custem"
                android:textSize="16sp"
                android:editable="false"
                android:paddingLeft="7dp"
                android:hint="Latitude"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/lang_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/lang"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_custem"
                android:textSize="16sp"
                android:editable="false"
                android:paddingLeft="7dp"
                android:hint="Longitude"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/lacation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:background="@drawable/edit_custem"
                android:textSize="16sp"
                android:editable="false"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:paddingLeft="7dp"
                android:hint="Name of Location"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/visit_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Unique Visit Number- "
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/uniqe_visit_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="16sp"/>


            </LinearLayout>





            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:textColor="#FFFFFF"
                android:background="#4bb134"
                android:text="Submit"/>

            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:visibility="invisible"
                android:layout_marginTop="15dp"
                android:textColor="#FFFFFF"
                android:background="#4bb134"
                android:text="Update"/>


        </LinearLayout>
   </ScrollView>
    </RelativeLayout>